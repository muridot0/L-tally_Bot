{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"comma-dangle": ["error", "always-multiline"],
		"comma-spacing": "error",
		"comma-style": "error",
		"indent": ["error", 2],
		"no-console": "off",
		"no-empty-function": "error",
		"no-trailing-spaces": ["error"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"yoda": "error"
	}
}